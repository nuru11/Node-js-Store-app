<%- include("parts/header") %>
<%- include("parts/navbar") %>  

<div calss="container">

    <% if(items.length === 0) { %>
        <p class="alert alert-danger">there are no item</p>
        <% } else {%>
            <table>
                <thead>
                    <td>no</td>
                    <td>product name</td>
                    <td>price</td>
                    <td>amount</td>
                    <td>total</td>
                    <td></td>
                </thead>
                <tbody>
                    <% for(let i = 0; i < items.length; i++){ %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= items[i].name %></td>
                            <td><%= items[i].price %></td>

                            <form method="POST">
                                <td><input type="text" name="amount" class="form-control" value="<%= items[i].amount %>"" /></td>
                                <td><%= items[i].price * items[i].amount %> $</td>
                                <td>
                                    <input type="hidden" name="cartId" value="<%= items[i]._id%>" />
                                    <input type="submit" class="btn btn-success" value="save" name="cartId" formaction="/cart/save" />
                                    <input type="submit" class="btn btn-danger" value="delete" name="cartId" formaction="/cart/delete" />
                                </td>
                            </form>
                        </tr>
                        <% } %>
                </tbody>
            </table>
            <% } %>
</div>

<%- include("parts/footer") %> 