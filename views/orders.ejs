<%- include("parts/header") %>
<%- include("parts/navbar") %>  


<div calss="container">
   <% if(item.length > 0) { %>
    <table class="table table-dark table-striped w-75 mx-auto mt-5">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">product name</th>
            <th scope="col">amount</th>
            <th scope="col">cost</th>
            <th scope="col">address</th>
            <th scope="col">Date/Time</th>
            <th scope="col">pay now</th>
            <th scope="col">delete</th>
          </tr>
        </thead>
        <tbody>
          <% for(let items = 0; items < item.length; items++){ %>
          <tr>
            <th scope="row"><%= items + 1 %></th>
            <td><%= item[items].name %></td>
            <td><%= item[items].price %></td>
            <td><%= item[items].amount %></td>
            <td><%= item[items].address %></td>
            <td ><%= item[items].time %></td>
            <td> <form action="/admin/payment" method="POST">
              <script
                 src="//checkout.stripe.com/v2/checkout.js"
                 class="stripe-button"
                 data-key="<%= key %>"
                 data-amount="2500"
                 data-currency="USD"
                 data-name="nuru ibrahim"
                 data-description="camera product"
                 data-locale="auto" >
               </script>
           </form></td>
            <td> <form method="POST" action="/admin/deleteOrder">
              <input type="hidden" name="id" value="<%= item[items]._id %>" />
              <input type="hidden" name="deleteOrder" value="/admin/orders" />
            <input type="submit" class="alert alert-danger" value="delete"/>
          </form></td>
         
          </tr>
          <% } %>
                </tbody>
      </table>
      
      <% }else { %>
        <div class="alert alert-danger">there is no orders</div>
        <% } %>
</div>

<%- include("parts/footer") %>