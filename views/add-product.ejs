<%- include("parts/header") %>
<%- include("parts/navbar") %>  

<div class="container text-center">
<form action="/admin/add-product" method="POST" enctype="multipart/form-data">
  <input type="text" style="margin-top:10px" class="form-control" name="name" placeholder="Name" />
  <input type="number" style="margin-top:10px" class="form-control" name="price" placeholder="price" />
  <textarea type="password" style="margin-top:10px" class="form-control" name="description" placeholder="description">

  </textarea>

  <select type="password" style="margin-top:10px" class="form-control" name="category">
    <option value="" selected>choose category</option>
    <option value="clothes">clothes</option>
    <option value="phones">phones</option>
    <option value="computers">computers</option>
  </select>
  <input type="file" style="margin-top:10px" class="form-control" name="image" placeholder="Image" />

  <input type="submit" style="margin-top:20px" value="add-product" class="btn btn-primary" />
</form>
</div>

