<%- include("parts/header") %>
<%- include("parts/navbar") %>  

<% if(item.length > 0) { %>
<table class="table table-dark w-75 mx-auto mt-5">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">client name</th>
        <th scope="col">client email</th>
        <th scope="col">product name</th>
        <th scope="col">amount</th>
        <th scope="col">cost</th>
        <th scope="col">address</th>
        <th scope="col">status</th>
        <th scope="col">Date/Time</th>
      </tr>
    </thead>
    <tbody>
      <% for(let items = 0; items < item.length; items++) { %>
      <tr>
        <th scope="row"><%= [items + 1] %></th>
        <td><%= item[items].username %></td>
        <td><%= item[items].email %></td>
        <td><%= item[items].name %></td>
        <td><%= item[items].amount %></td>
        <td><%= item[items].price %></td>
        <td><%= item[items].address %></td>
        <td>processing</td>
        <td><%= item[items].time %></td>
        <td style="background-color: transparent">
          <form method="POST" action="/admin/deleteOrder">
            <input type="hidden" name="id" value="<%= item[items]._id %>" />
            <input type="hidden" name="deleteOrder" value="/admin/manage-orders" />
          <input type="submit" class="alert" style="background-color: red" value="delete"/>
        </form></td>
      </tr>
      <% } %>
    </tbody>
  </table>
 
  <% }else { %>
    <div class="alert alert-danger">there is no orders</div>
    <% } %>
<%- include("parts/footer") %> 