<%- include("parts/header") %> <%- include("parts/navbar") %>

<div class="container">
  <form method="GET" action="/">
    <select name="category" class="form-control" style="margin-top: 10px; width: fit-content">
      <option value="all">all</option>
      <option value="clothes">clothes</option>
      <option value="technology">technology</option>
    </select>
    <input
      type="submit"
      style="margin-top: 10px"
      class="btn btn-primary"
      value="filter"
    />
  </form>

  <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel" style="margin-top: 10px; width: 600px; margin-left: 20%;">
    <div class="carousel-inner">

        <div class="carousel-item active">
          <img src="/img7.jpg" class="d-block w-100" alt="..." height="300" style="width: 300px">
        </div>
       
      <div class="carousel-item">
        <img src="/img8.jpg" class="d-block w-100" alt="..." height="300" width="300">
      </div>
      <div class="carousel-item">
        <img src="/img9.jpg" class="d-block w-100" alt="..." height="300" width="300">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <% if(postCartValidationError) {%>
   <% for(let p of postCartValidationError){ %>
  <div class="alert alert-danger"><%= p.msg %></div>
  <% } %> 
  <% } %> 
  <% if(products.length === 0) { %>
  <div>there is no product</div>
  <% } else {%>
  <div class="row">
    <% for(let product of products) { %>

    <div
      class="col col-12 col-md-6 col-lg-4 col-xl-3"
      style="margin-bottom: 10px; margin-top: 10px"
    >
      <div class="card" style="width: 18rem">
        <img
          src="/<%= product.image %>"
          class="card-img-top"
          width="40"
          height="190"
        />
        <div class="card-body">
          <h5 class="card-title">
            <a href="/product/<%=product._id%>"><%= product.name%></a>
          </h5>

          <p><%= product.price %></p>
          <form action="/cart" method="POST">
            <input type="number" name="amount" class="form-control" value="1" />
            <input type="hidden" name="name" value="<%= product.name %>" />
            <input type="hidden" name="price" value="<%= product.price %>" />
            <input type="hidden" name="productId" value="<%= product._id %>" />
            <input type="hidden" name="redirectTo" value="/" />
            <input
              type="submit"
              style="margin-top: 10px"
              value="add to cart"
              class="btn btn-primary"
            />
          </form>
        </div>
      </div>
    </div>

    <% } %> <% } %> <% if(postCartValidationError) {%> <% for(let p of
    postCartValidationError){ %>
    <div class="alert alert-danger"><%= p.msg %></div>
    <% } %> <% } %>
  </div>
</div>
<%- include("parts/footer") %>
